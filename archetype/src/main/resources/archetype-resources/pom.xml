<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>${version}</version>
    <packaging>jar</packaging>

    <properties>
        <kotlin.version>1.1.4-3</kotlin.version>
        <osiris.version>${osirisVersion}</osiris.version>
        <jackson.version>2.8.7</jackson.version>
        <logback.version>1.2.3</logback.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.github.cjkent.osiris</groupId>
            <artifactId>osiris-core</artifactId>
            <version>${osiris.version}</version>
        </dependency>
        <dependency>
            <groupId>io.github.cjkent.osiris</groupId>
            <artifactId>osiris-local-server</artifactId>
            <version>${osiris.version}</version>
        </dependency>
        <dependency>
            <groupId>io.github.cjkent.osiris</groupId>
            <artifactId>osiris-aws</artifactId>
            <version>${osiris.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jre8</artifactId>
            <version>${kotlin.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-kotlin</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>
        <testSourceDirectory>src/test/kotlin</testSourceDirectory>
        <plugins>
            <!--Configuration controlling how the API is deployed to API Gateway and Lambda-->
            <plugin>
                <groupId>io.github.cjkent.osiris</groupId>
                <artifactId>osiris-maven-plugin</artifactId>
                <version>${osiris.version}</version>
                <configuration>
                    <apiName>${artifactId}</apiName>
                    <region>eu-west-1</region>
                    <apiDefinitionClass>${package}.ExampleApiDefinition</apiDefinitionClass>
                    <componentsClass>${package}.ExampleComponentsImpl</componentsClass>
                    <stages>
                        <dev>
                            <deployOnUpdate>true</deployOnUpdate>
                            <description>Development stage</description>
                            <variables>
                                <var1>devValue1</var1>
                                <var2>devValue2</var2>
                            </variables>
                        </dev>
                        <!-- Stage with no variables or description that is not deployed when it is updated -->
                        <uat/>
                        <prod>
                            <deployOnUpdate>false</deployOnUpdate>
                            <description>Production stage</description>
                            <variables>
                                <var1>prodValue1</var1>
                                <var2>prodValue2</var2>
                            </variables>
                        </prod>
                    </stages>
                    <environmentVariables>
                        <EXAMPLE_ENVIRONMENT_VARIABLE>Bob</EXAMPLE_ENVIRONMENT_VARIABLE>
                    </environmentVariables>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!--Configuration controlling how the API is run locally using 'mvn exec:exec'-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.5.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>java</executable>
                    <arguments>
                        <argument>-classpath</argument>
                        <classpath/>
                        <argument>io.github.cjkent.osiris.localserver.LocalServerKt</argument>
                        <argument>-p</argument>
                        <argument>8080</argument>
                        <argument>-d</argument>
                        <argument>${package}.ExampleApiDefinition</argument>
                        <argument>-c</argument>
                        <argument>${package}.ExampleComponentsImpl</argument>
                    </arguments>
                    <environmentVariables>
                        <EXAMPLE_ENVIRONMENT_VARIABLE>Bob</EXAMPLE_ENVIRONMENT_VARIABLE>
                    </environmentVariables>
                </configuration>
            </plugin>
            <!--Standard plugins - this configuration shouldn't need to be changed-->
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>test-compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmTarget>1.8</jvmTarget>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <descriptors>
                        <descriptor>${project.basedir}/src/assembly/jar-with-dependencies.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <!--Disable the standard deployment plugin because we don't want to use it-->
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
